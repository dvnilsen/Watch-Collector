<%- include('../partials/header') %>

<% if(user) { %>
<section id="show-page">
    <div>Brand: </div>
    <div><%= watch.brand %></div>
    <div>Style: </div>
    <div><%= watch.style %></div>
    <div>Movement: </div>
    <div><%= watch.movement %></div>
    <div>Case Material: </div>
    <div><%= watch.caseMaterial %></div>
    <div>Dial Color: </div>
    <div><%= watch.dialColor %></div>
    <div>Gender: </div>
    <div><%= watch.gender %></div>
    <% bands.forEach(function(b) { %>
        <div>Band Material:</div>
        <div><%= b.material %></div>
        <div>Band Color:</div>
        <div><%= b.color %></div>
        <% }); %>
    <div>Review: </div>
    <div><%= watch.review %></div>
</section>
<% } %>

<a href="/watches/<%= watch._id %>/bands/new"><button id="band">Add New Band To Your Watch</button></a>

